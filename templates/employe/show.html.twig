{% extends 'base.html.twig' %}
{% block title %}Détails de l'employé{% endblock %}

{% block body %}
    <h1>Détails de l'employé</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employe.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ employe.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ employe.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ employe.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employe.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ employe.adresse }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ employe.poste }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ employe.salaire }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ employe.datedenaissance ? employe.datedenaissance|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_employe_index') }}">Tous les employés</a>
    <a class="btn btn-primary" href="{{ path('app_employe_edit', {'id': employe.id}) }}">Éditer</a>
    {{ include('employe/_delete_form.html.twig') }}
{% endblock %}
